namespace std
{
	void memset(int ptr, int value, int sz)
	{
		for ( int q = 0; q < sz; ++q )
		{
			ptr[q] = value;
		}
	}
	int sizeof(int ptr) { return SizeOfArray(ptr); }
	int vbound(int v, int a, int b)
	{
		/*
		if ( a < b ) 
		{
			if ( v <= a ) return a;
			if ( v >= b ) return b;
			return v;
		}
		else
		{
			if ( v <= b ) return b;
			if ( v >= a ) return a;
			return v;
		}
		*/
		return a < b ? (v < a ? (a) : (v > b ? (b) : (v))) : (v < b ? (b) : (v > a ? (a) : (v)));
	}
	bool matchstring(int a, int b)
	{
		bool match;
		//if ( strlen(a) != strlen(b) )
		//LogPrint("Size of string a: %d \n", SizeOfArray(a));
		//LogPrint("Size of string b: %d \n", SizeOfArray(b));
		for ( int q = 0; (a[q] != 0 && b[q] != 0); ++q )
		{
			if ( a[q] == b[q] ) match = true;
			else match = false;
			if ( !match ) return false;
		}
		return match;
	}
}

namespace iteminfo
{
	const int PRICE = 5; //Attributes 5
	//! Returns the literal value of the price. 
	int getPrice(int item_id)
	{
		itemdata idata = Game->LoadItemData(item_id);
		return idata->Attributes[PRICE];
	}
	//! Places the price into a string 'buffer' and returns the pointer to that string. 
	int getPrice(int buffer, int item_id)
	{
		itemdata idata = Game->LoadItemData(item_id);
		std::string::itoa(buffer, idata->Attributes[PRICE]);
		return buffer; 
	}
	//! Places the name of an item into a buffer, removing all trailing spaces, then returns the pointer to that string. 
	int getName(int buffer, int item_id)
	{
		itemdata idata = Game->LoadItemData(item_id);
		idata->GetName(buffer);
		//Remove trailing spaces:
		for ( int q = (SizeOfArray(buffer)-1); (buffer[q] != ' ' && buffer[q] != 0); --q )
		{
			buffer[q] = 0;
		}
		return buffer; //Returns pointer to string. 
		
		
	}
	
}

STRUCT script shop
{
	const int maxitems = 16;
	const int WEAPONSHOP = 1; //Screen->initD[]
	const int TOOLSHOP = 2; //Screen->initD[]
	const int ARMOURSHOP = 3; //Screen->initD[]
	const int MAGICSHOP = 4; //Screen->initD[]
	int itemnames[maxitems,65]; //! 64 is the max length of an item name, 63 chars + NULL.
	bitmap inventory;
	/*! Shop inventory menu 
	
		The menu should list the total number of names in a vertical column, each with its price, 
		aligned to the right in a second column.
	
		It may be viable to resize the menu hight based on the number of entries.
	
	*/
	bitmap dialogue;
	bitmap buy;
	
	
	
	
	const int invX = 100;
	const int invY = 10;
	const int invH = 100;
	const int invW = 100;
	const int invLayer = 2;
	
	const int dlgX = 100;
	const int dlgY = 10;
	const int dlgH = 100;
	const int dlgW = 100;
	const int dlgLayer = 2;
	
	const int buyX = 100;
	const int buyY = 10;
	const int buyH = 100;
	const int buyW = 100;
	const int buyLayer = 4;
	
	const int textLineHeight = 17;
	const int invVPadding = 10; //Vertical overscan padding to ensure that we never draw off of the bitmap. 
	const int dlgVPadding = 10;
	const int buyVPadding = 10;
	
	const int invHPadding = 2; //Horizontal overscan padding to ensure that we never draw off of the bitmap. 
	const int dlgHPadding = 2;
	const int buyHPadding = 2;

	enum shopbitmaps { bInventory, bDialogue, bBuyOptions };
	void resize(shopbitmaps which_bitmap, int num_lines, int new_width)
	{
		switch(which_bitmap)
		{
			case bInventory: 
			{
				inventory->Create(invLayer, invW + invHPadding, (num_lines*textLineHeight) + invVPadding); 
				break;
			}
			case bDialogue: 
			{
				dialogue->Create(dlgLayer, ( ( new_width > 0 ) ? new_width : dlgW ) + dlgHPadding, 
					(num_lines*textLineHeight) + dlgVPadding); 
				break;
			}
			case bBuyOptions: 
			{
				buy->Create(buyLayer, ( ( new_width > 0 ) ? new_width : buyW ) + buyHPadding, 
					(num_lines*textLineHeight) + buyVPadding); 
				break;
			}
			
		}
	}
	
	void draw(int layer, bitmap target, shopbitmaps which_bitmap, int x, int y)
	{
		
		if ( !(<int>target) ) target = <bitmap>(-2); //Sanity check, draw to the screen or current RT.
		
		switch(which_bitmap)
		{
			case bInventory: 
			{
				inventory->Blit((( layer > -1 && layer < 8 ) ? layer : invLayer ), target, 0, 0, inventory->Width, inventory->Height,
					x, y-56+1, inventory->Width, inventory->Height, 0,0,0,0,0,false); 
				break;
			}
			case bDialogue: 
			{
				dialogue->Blit((( layer > -1 && layer < 8 ) ? layer : dlgLayer ), target, 0, 0, dialogue->Width, dialogue->Height,
					x, y-56+1, dialogue->Width, dialogue->Height, 0,0,0,0,0,false); 
				break;
			}
			case bBuyOptions: 
			{
				buy->Blit((( layer > -1 && layer < 8 ) ? layer : buyLayer ), target, 0, 0, buy->Width, buy->Height,
					x, y-56+1, buy->Width, buy->Height, 0,0,0,0,0,false); 
				break;
			}
			
		}
		
		
	}
	int prices[maxitems,7];
	void clear()
	{
		for ( int q = SizeOfArray(itemnames-1); q > 0; --q ) itemnames[q] = 0;
		for ( int q = SizeOfArray(prices-1); q > 0; --q ) prices[q] = 0;
		inventory->Create(invLayer, invW, invH); //clear bitmaps for re-use
		dialogue->Create(dlgLayer, dlgW, dlgH);
		buy->Create(buyLayer, buyW, buyH);
	}
	void init()
	{
		inventory = Game->CreateBitmap(invW, invH);
		dialogue = Game->CreateBitmap(dlgW, dlgH);
		buy = Game->CreateBitmap(buyW, buyH);
		
	}
}

