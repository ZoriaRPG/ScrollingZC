		int choice; int f; int data[3];
		until(choice)
		{
			++f;
			choice = menu(data);
			if ( !(f%60)) { LogPrint("Weapon Shop is %s \n", "Running"); }
			Waitframe();
		}
		
		
	}
	int menu(int ptr)
	{
		//int selection: ptr[SELECTION]
		//int cursor_pos: ptr[CURSOR_POS]
		//setup menu
		
		//draw menu
		
		//draw cursor
		
		if ( Hero->PressA ) return ptr[SELECTION];
		if ( Hero->PressB ) return -1;
		
	}
	void setup(int first_str) 
	{
		/*STRING FORMAT	: item id @discount *
		* here, is a spacing delimiter. We might use ; instead.
		The item ID will be used to get its name.
		We put its name in the shop menu list
		We get its price from itemdata, via 
		itemdata id = Game->LoadItemData(id);
		//We display its name in the list from id->GetName
		We get its base costs
		Then we reduce that cost @discount
		We can use & to increase the price. 
		
		Example strings
		1@0,35@0,105@10,17@0,24@15,160&100!
		6 items:
		1, no discount
		35, no discount
		105, -10GP
		17, no discount
		24, -15GP
		160, +100GP
		! is end of list
		
		*/
		
		//get atring data
		if ( !first_str ) return; //Abort if pointing at NULL.
		//Get the first string, and read in sequence, each 'next strick', pushing each to the stack.
		//stack[0] will be the total count, stack[1] and above will be the string IDs. 
		stack[1] = first_str; ++stack[0]; int nx;
		messagedata the_message = Game->LoadMessageData(first_str);
		//
		while(the_message->Next)
		{
			++stack[0];
			nx = the_message->Next;
			LogPrint("Next String in sequence is: %d \n", nx);
			stack[stack[0]] = nx;
			
			the_message = Game->LoadMessageData(nx);
		}
		//string IDs are loaded onto the stack, so we extract them.
		 int item_pos; 
		int ids[shop.maxitems], discounts[shop.maxitems]; 
		//for each string, and thus each valid ite,m
		for ( int q = 1; q < (stack[0]); ++q )
		{
			if ( item_pos >= shop.maxitems ) 
			{
				LogPrint("CSV List exceeded maximum number of items for a shop. Count was %d \n", item_pos);
				break;
			}
			//get the item ID, first:
			int details[256];
			
			bool discount_is_negative; //if true, the cost increases. 
			int tmp[10];
			int temp_pos;
			Game->GetMessage(stack[q],details); //stack[q] holds the current message ID
			for ( int qw = 0; details[qw] != 0; ++qw )
			{
				if ( item_pos >= shop.maxitems ) 
				{
					LogPrint("CSV List exceeded maximum number of items for a shop. Count was %d \n", item_pos);
					break;
				}
				//find tokens
				//do noting until we hit a valid number
				if ( isNumber(details[qw]) )
				{
					tmp[temp_pos] = details[qw];
					if ( isNumber(details[qw+1]) ) //continuation of a number
					{
						++temp_pos; continue;
					}
					else if ( details[qw+1] == '@' ) //next char is @, so this is the id
					{
						ids[item_pos] = atoi(tmp);
						//wipe temp and reset temp_pos
						for ( int aa = 0; aa < 10; ++aa ) tmp[aa] = 0;
						temp_pos = 0;
						discount_is_negative = false;
					}
					else if ( details[qw+1] == '&' ) //next char is @, so this is the id
					{
						ids[item_pos] = atoi(tmp);
						//wipe temp and reset temp_pos
						for ( int aa = 0; aa < 10; ++aa ) tmp[aa] = 0;
						temp_pos = 0;
						discount_is_negative = true;
					}
					else if ( details[qw+1] == ',' ) //next item in CSV list
					{
						//temp pos contains the discount value:
						discounts[item_pos] = (atoi(tmp) * ( discount_is_negative ? -1 : 1));
						//wipe temp and reset temp_pos
						for ( int aa = 0; aa < 10; ++aa ) tmp[aa] = 0;
						temp_pos = 0;
						//advance to next item
						++item_pos;
						if ( item_pos >= shop.maxitems ) 
						{
							LogPrint("CSV List exceeded maximum number of items for a shop. Count was %d \n", item_pos);
							break;
						}
					}
					else if ( details[qw+1] == '!' ) //end of list
					{
						break;
					}
					else //still a number 
					{
						LogPrint("CSV list containted an illegal character: %d \n", details[qw+1]);
						LogPrint("THe full string was: %s \n", details);
					}
					
				}
			}
		} //end loading all string data into ids[shop.maxitems] and discounts[shop.maxitems]
		for ( int q = 0; q < shop.maxitems; ++q )
		{
			
			//get the names
			int tempname[65]; int tempprice[7];
			if ( ids[q] ) //not an invalid item
			{
				iteminfo::getName(tempname, ids[q]);
				tempname[64] = ','; //terminator/separator
				strcat(shop.itemnames, tempname); //append the name to the main list
				
				//get the price, applying the discount
				int price = iteminfo::getPrice(ids[q]);
				price += discounts[q];
				std::string::itoa(tempprice, price);
				tempprice[6] = ','; //terminator/separator
				strcat(shop.prices, tempprice); //append the final price to the main list
			}
			

		}			
		
	} //end weaponshop.setup()
	
}

