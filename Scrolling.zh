item script weaponshop
{
	
	int stack[256];
	
	
	
	
	//int strings[shop.maxitems,256];
	//! We call this when we load any shop. 
	//! it needn't be terribly fast, but we first need to call shop.clear(). 
	//! Thereafter, we construct its menu and display it. 
	
	const int SELECTION = 0;
	const int CURSOR_POS = 1;
	void run()
	{
